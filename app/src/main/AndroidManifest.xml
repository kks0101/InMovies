<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inmovies.inmovies">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InMovies">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="@string/filter_movie_http">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <!-- accept URIs that begin with "http://www.inmovies.com/movie-->
                <data android:scheme="http"
                    android:host="www.inmovies.com"
                    android:pathPrefix="/movie"/>
            </intent-filter>

            <intent-filter android:label="@string/filter_movie_inmovies">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <!-- accept URIs that begin with "inmovies://movie-->
                <data android:scheme="inmovies"
                    android:host="movie" />
            </intent-filter>
        </activity>
    </application>

</manifest>